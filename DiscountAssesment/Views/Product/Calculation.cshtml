@model DiscountAssesment.Models.ClearanceSale
@using DiscountAssesment.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calculation</title>
    <style>
        table{
            position:relative;
            margin:auto;
            width:500px;
            
            background-image:linear-gradient(270deg, deeppink, purple);
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <h2><i>Clearance Sale</i></h2>
    @using (Html.BeginForm("Calculation", "Product", FormMethod.Post))
            {
                <table class="row">
                    <tr class="col-md-6">
                        <td>Enter Product Name
                        <br />
                            @Html.TextBoxFor(c => c.ProductName)
                        </td>
                        
                    </tr>
                </table>
                <table class="row">
                    <tr class="col-md-6">
                        <td>
                            Enter Product Price<br />

                            @Html.TextBoxFor(c => c.price)
                        </td>
                       
                    </tr>
                </table>
                <table class="row">
                    <tr class="col-md-12">
                        <td>
                            Is the Product on Sale<br />
                            @Html.RadioButtonFor(c => c.isSale, "yes")<span> Yes </span>
                            <br />
                            @Html.RadioButtonFor(c => c.isSale, "no")<span> No </span>
                        </td>
                      

                    </tr>
                </table>
                <table class="row">
                    <tr class="col-md-4">
                        <td>
                            Day 1 Sales
                            @Html.TextBoxFor(c => c.day1sale)
                        </td>
                    </tr>
                    <tr class="col-md-4">
                        <td>
                            Day 2 Sales
                            @Html.TextBoxFor(c => c.day2sale)
                        </td>
                    </tr>
                    <tr class="col-md-4">
                        <td>
                            Day 3 Sales
                            @Html.TextBoxFor(c => c.day3sale)
                        </td>
                        </tr>


                </table>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Click to Calculate" class="btn-primary" />
                    </div>
                </div>
                <br />
                <br />
                <div class="row" style="background-color:Highlight; width:600px">
                    <div class="col-md-12">
                        <h3>@ViewBag.info1</h3>
                        <h3>@ViewBag.info2</h3>
                        <h3>@ViewBag.info3</h3>
                        <h3>@ViewBag.info4</h3>
                        <h3>@ViewBag.info5</h3>

                    </div>
                </div>
                
            }
</body>
</html>
